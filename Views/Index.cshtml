@using WebApi.Models
@{
    ViewData["Title"] = "Ana Sayfa";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Hero Section with Categories -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="hero-section position-relative" style="height: 300px; border-radius: 12px; overflow: hidden; border: #0a58ca 1px solid;">
                <div class="container h-100 d-flex align-items-center">
                    <div class="">
                        <h1 class="display-5 fw-bold">Teknolojinin Adresi</h1>
                        <p class="lead">En yeni teknoloji ürünleri ve fırsatlar sizleri bekliyor</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Categories with Images -->
    <div class="row mb-5">
        <div class="col-12">
            <h4 class="section-title mb-4">Kategoriler</h4>
        </div>
    
        <div class="col-6 col-md-4 col-lg-2 mb-4">
            <a href="/category/2" style="text-decoration: none">
                <div class="category-card shadow-sm rounded h-100">
                    <div class="card text-center h-100">
                        <div class="p-3">
                            <i class="bi bi-laptop text-primary" style="font-size: 2.5rem;"></i>
                        </div>
                        <div class="card-body">
                            <h6 class="card-title">Bilgisayarlar</h6>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    
        <div class="col-6 col-md-4 col-lg-2 mb-4">
            <a href="/category/5" style="text-decoration: none">
                <div class="category-card shadow-sm rounded h-100">
                    <div class="card text-center h-100">
                        <div class="p-3">
                            <i class="bi bi-phone text-success" style="font-size: 2.5rem;"></i>
                        </div>
                        <div class="card-body">
                            <h6 class="card-title">Akıllı Telefonlar</h6>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    
        <div class="col-6 col-md-4 col-lg-2 mb-4">
            <a href="/category/23" style="text-decoration: none">
                <div class="category-card shadow-sm rounded h-100">
                    <div class="card text-center h-100">
                        <div class="p-3">
                            <i class="bi bi-motherboard text-danger" style="font-size: 2.5rem;"></i>
                        </div>
                        <div class="card-body">
                            <h6 class="card-title">Bilgisayar Parçaları</h6>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    
        <div class="col-6 col-md-4 col-lg-2 mb-4">
            <a href="/category/33" style="text-decoration: none">
                <div class="category-card shadow-sm rounded h-100">
                    <div class="card text-center h-100">
                        <div class="p-3">
                            <i class="bi bi-tv text-warning" style="font-size: 2.5rem;"></i>
                        </div>
                        <div class="card-body">
                            <h6 class="card-title">Televizyonlar</h6>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    
        <div class="col-6 col-md-4 col-lg-2 mb-4">
            <a href="/category/26" style="text-decoration: none">
                <div class="category-card shadow-sm rounded h-100">
                    <div class="card text-center h-100">
                        <div class="p-3">
                            <i class="bi bi-keyboard text-info" style="font-size: 2.5rem;"></i>
                        </div>
                        <div class="card-body">
                            <h6 class="card-title">Klavyeler</h6>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    
        <div class="col-6 col-md-4 col-lg-2 mb-4">
            <a href="/category/13" style="text-decoration: none">
                <div class="category-card shadow-sm rounded h-100">
                    <div class="card text-center h-100">
                        <div class="p-3">
                            <i class="bi bi-paint-bucket text-secondary" style="font-size: 2.5rem;"></i>
                        </div>
                        <div class="card-body">
                            <h6 class="card-title">Süpürgeler</h6>
                        </div>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <!-- Featured Products Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4 class="section-title m-0">Öne Çıkan Ürünler</h4>
            </div>
        </div>
    </div>

    <!-- Featured Products Row -->
    <div class="row">
        @foreach (var product in ((List<Product>)ViewBag.Products).Take(4))
        {
            <div class="col-6 col-md-3 mb-4">
                <div class="card product-card shadow-sm h-100">
                    <div class="product-image-container" style="height: 200px; padding: 15px; position: relative;">
                        <a href="/product/@product.Id">
                            <img class="product-image" src="@product.Images.Split(',')[0]" alt="Product" style="width: 100%; height: 100%; object-fit: contain;">
                            @if (product.Discount > 0)
                            {
                                <span class="discount-badge position-absolute top-0 end-0 bg-danger text-white px-2 py-1 m-2 rounded">%@product.Discount</span>
                            }
                        </a>
                    </div>
                    <div class="card-body d-flex flex-column">
                        <h6 class="card-title text-truncate">@product.Name</h6>
                        <div class="d-flex justify-content-between align-items-center mt-auto">
                            <div>
                                <span class="fw-bold text-success">@String.Format("{0:N2} ₺", @product.GetDiscountedPrice())</span>
                                @if (product.Discount > 0)
                                {
                                    <span class="text-decoration-line-through text-muted small ms-1">@String.Format("{0:N2} ₺", @product.Price)</span>
                                }
                            </div>
                            <button class="btn btn-sm btn-primary" onclick="addToBasket('@product.Id', 'c2ae16c5-4d71-4f38-94c6-107bd4fa47ae')">
                                <i class="bi bi-cart-plus"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .category-card{
     cursor: pointer;   
    }
</style>