@using WebApi.Models
@{
    ViewData["Title"] = "Ana Sayfa";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <title>E-Ticaret</title>
</head>

<div class="container-fluid py-4">
    <div class="row">
        <!-- Categories sidebar with subcategories -->
        <div class="col-lg-3 col-md-4">
            <h4 class="section-title">Kategoriler</h4>

            <!-- Category 1 -->
            <div class="category-card">
                <div class="category-header">Elektronik</div>
                <div class="subcategory">Telefonlar</div>
                <div class="subcategory">Bilgisayarlar</div>
                <div class="subcategory">Televizyonlar</div>
                <div class="subcategory">Kulaklıklar</div>
            </div>

            <!-- Category 2 -->
            <div class="category-card">
                <div class="category-header">Giyim</div>
                <div class="subcategory">Kadın Giyim</div>
                <div class="subcategory">Erkek Giyim</div>
                <div class="subcategory">Çocuk Giyim</div>
                <div class="subcategory">Ayakkabılar</div>
            </div>

            <!-- Category 3 -->
            <div class="category-card">
                <div class="category-header">Ev & Yaşam</div>
                <div class="subcategory">Mobilya</div>
                <div class="subcategory">Mutfak Eşyaları</div>
                <div class="subcategory">Dekorasyon</div>
                <div class="subcategory">Banyo Ürünleri</div>
            </div>

            <!-- Category 4 -->
            <div class="category-card">
                <div class="category-header">Kitap & Hobi</div>
                <div class="subcategory">Kitaplar</div>
                <div class="subcategory">Kırtasiye</div>
                <div class="subcategory">Oyunlar</div>
                <div class="subcategory">Müzik Aletleri</div>
            </div>
        </div>

        <!-- Main content -->
        <div class="col-lg-9 col-md-8">
            <!-- Hero section -->
            <div class="hero-section" style="height: 400px; border-radius: 12px; margin-bottom: 40px; overflow: hidden;">
                <img src="assets/hero.jpg" alt="Hero Banner" style="width: 100%; height: 100%; object-fit: cover;">
            </div>

            <!-- Deals section -->
            <div class="mt-5">
                <h4 class="section-title">Kaçırılmayacak Fırsatlar</h4>
                <div class="row">
                    <!-- Product Card 1 -->
                    @foreach (var product in (List<Product>)ViewBag.Products)
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card product-card shadow-sm">
                                <div class="product-image-container">
                                    <a href="/product/@product.Id">
                                        <img class="product-image" src="@product.Images.Split(',')[0]" alt="Product">
                                        <span class="discount-badge bg-danger text-white">%@product.Discount İndirim</span>
                                    </a>
                                </div>
                                <div class="card-body">
                                    <div class="product-meta">
                                        @* <span class="badge bg-danger">En çok satan</span> *@
                                        @* <span class="badge bg-secondary">Son 5 ürün</span> *@
                                    </div>
                                    <h5 class="card-title">@product.Name</h5>
                                    <div class="d-flex justify-content-between align-items-center mt-3">
                                        <div class="d-flex align-items-end">
                                            <span class="product-price">@product.GetDiscountedPrice()</span>
                                            <span class="old-price ms-2">@product.Price₺</span>
                                        </div>
                                        <button class="btn btn-primary add-to-cart" onclick="addToBasket('@product.Id', 'c2ae16c5-4d71-4f38-94c6-107bd4fa47ae')">
                                            Sepete Ekle
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>