@using WebApi.Models
@{
    ViewData["Title"] = "Ana Sayfa";
}

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <title>E-Ticaret</title>
</head>

<div class="container-fluid py-4">
    <div class="row">
        <!-- Categories sidebar with subcategories -->
        <div class="col-lg-3 col-md-4">
        <h4 class="section-title">Kategoriler</h4>

        @foreach (var group in ViewBag.GroupedCategories)
        {
            <div class="category-card">
                <div class="category-header">
                    @group.Category.Name
                </div>
                @foreach (var subcategory in group.Subcategories)
                {
                    <div class="subcategory" onclick="redirectToCategory(@subcategory.Id)">
                        @subcategory.Name
                    </div>
                }
            </div>
        }
    </div>

        <!-- Main content -->
        <div class="col-lg-9 col-md-8">
            <!-- Hero section -->
            <div class="hero-section" style="height: 400px; border-radius: 12px; margin-bottom: 40px; overflow: hidden;">
                <img src="assets/hero.jpg" alt="Hero Banner" style="width: 100%; height: 100%; object-fit: cover;">
            </div>

            <!-- Deals section -->
            <div class="mt-5">
                <h4 class="section-title">Kaçırılmayacak Fırsatlar</h4>
                <div class="row">
                    <!-- Product Card 1 -->
                    @foreach (var product in (List<Product>)ViewBag.Products)
                    {
                        <div class="col-lg-4 col-md-6 mb-4">
                            <div class="card product-card shadow-sm">
                                <div class="product-image-container">
                                    <a href="/product/@product.Id">
                                        <img class="product-image" src="@product.Images.Split(',')[0]" alt="Product" style="width: 100%; height: 100%; object-fit: contain;">
                                        @if (product.Discount > 0)
                                        {
                                            <span class="discount-badge bg-danger text-white">%@product.Discount İndirim</span>
                                        }
                                    </a>
                                </div>
                                <div class="card-body d-flex flex-column">
                                    <div class="product-meta">
                                        @* <span class="badge bg-danger">En çok satan</span> *@
                                        @* <span class="badge bg-secondary">Son 5 ürün</span> *@
                                    </div>
                                    <h5 class="card-title">@product.Name</h5>
                                    <div class="d-flex justify-content-between align-items-center mt-3">
                                        <div class="d-flex align-items-end">
                                            <span class="product-price text-center" style="font-size: 1.25rem; font-weight: bold; color: #28a745;">
                                                @String.Format("{0:N2} ₺", @product.GetDiscountedPrice())
                                            </span>
                                            <span class="old-price ms-2" style="font-size: 1rem; text-decoration: line-through; color: #888;">
                                            @if (product.Discount > 0)
                                            {
                                                    @String.Format("{0:N2} ₺", @product.Price)
                                            }
                                            </span>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-center align-items-center mt-2 mt-auto">
                                        <button class="btn btn-primary add-to-cart" onclick="addToBasket('@product.Id', 'c2ae16c5-4d71-4f38-94c6-107bd4fa47ae')" style="margin-top: 10px;">
                                            Sepete Ekle
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function redirectToCategory(categoryId) {
        window.location.href = `/Category/${categoryId}`;
    }
</script>