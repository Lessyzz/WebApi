@using WebApi.Models
@{ ViewData["Title"] = "Merchant Dashboard"; }

@{
    Layout = "../Shared/_Layout.cshtml";
}


<div class="container mt-4">
    <h2 class="mb-4">Merhaba, Mehmet Yılmaz!</h2>
    
    <div class="row">
        <!-- Orders Summary -->
        <div class="col-md-4">
            <div class="card text-white bg-primary mb-3">
                <div class="card-body">
                    <h5 class="card-title">Toplam Siparişler</h5>
                    <p class="card-text display-4">120</p>
                </div>
            </div>
        </div>
        
        <!-- Products Count -->
        <div class="col-md-4">
            <div class="card text-white bg-success mb-3">
                <div class="card-body">
                    <h5 class="card-title">Aktif Ürünler</h5>
                    <p class="card-text display-4">@ViewBag.Products.Count</p>
                </div>
            </div>
        </div>
        
        <!-- Revenue -->
        <div class="col-md-4">
            <div class="card text-white bg-warning mb-3">
                <div class="card-body">
                    <h5 class="card-title">Toplam Gelir</h5>
                    <p class="card-text display-4">4,500₺</p>
                </div>
            </div>
        </div>
    </div>
    
    <div class="mt-5">
        <h4 class="section-title">Ürünleriniz</h4>
        <div class="row">
            @foreach (var product in (List<Product>)ViewBag.Products)
            {
                <div class="col-lg-3 col-md-4 mb-4">
                    <div class="card product-card shadow-sm">
                        <div class="product-image-container">
                            <a href="/product">
                                <img class="product-image" src="@product.Images.Split(',')[0]" alt="Product">
                                <span class="discount-badge bg-danger text-white">%@product.Discount İndirim</span>
                            </a>
                        </div>
                        <div class="card-body">
                            <div class="product-meta">
                                @* <span class="badge bg-danger">En çok satan</span> *@
                                @* <span class="badge bg-secondary">Son 5 ürün</span> *@
                            </div>
                            <h5 class="card-title">@product.Name</h5>
                            <div class="d-flex justify-content-between align-items-center mt-3">
                                <div class="d-flex align-items-end">
                                    <span class="product-price">@product.GetDiscountedPrice()</span>
                                    <span class="old-price ms-2">@product.Price₺</span>
                                </div>
                                <button class="btn btn-primary add-to-cart">
                                    Sepete Ekle
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    
    <!-- Quick Actions -->
    <div class="row mt-4">
        <div class="col-md-6">
            <a href="/Seller/Products" class="btn btn-outline-primary btn-lg w-100">Ürünleri Yönet</a>
        </div>
        <div class="col-md-6">
            <a href="/Seller/Orders" class="btn btn-outline-secondary btn-lg w-100">Siparişleri Görüntüle</a>
        </div>
    </div>
</div>