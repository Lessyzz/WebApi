@using WebApi.Models
@model IEnumerable<WebApi.Models.PaidProduct>
@{
    ViewData["Title"] = "Order Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var user = ViewBag.User as User;
}

<title>DİJİKON - Admin Sipariş Detayları</title>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Order Details - @ViewBag.PaymentId</h2>
        <a href="/Admin/Orders" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back to Orders
        </a>
    </div>

    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Order Information</h5>
                </div>
                <div class="card-body">
                    <p><strong>Order ID:</strong> @ViewBag.PaymentId</p>
                    <p><strong>Total Amount:</strong> $@ViewBag.TotalAmount.ToString("F2")</p>
                    <p><strong>Items:</strong> @Model.Count()</p>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Customer Information</h5>
                </div>
                <div class="card-body">
                    @if (user != null)
                    {
                        <p><strong>Name:</strong> @user.Username</p>
                        <p><strong>Email:</strong> @user.Email</p>
                        <p><strong>Phone:</strong> @user.Number</p>
                        @if (!string.IsNullOrEmpty(user.Address))
                        {
                            <p><strong>Address:</strong> @user.Address</p>
                        }
                    }
                    else
                    {
                        <p>User information not available</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-dark text-white">
            <h5 class="mb-0">Order Items</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover admin-table">
                    <thead>
                        <tr>
                            <th>Product ID</th>
                            <th>Product Name</th>
                            <th>Price</th>
                            <th>Quantity</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.ProductId</td>
                                <td>@item.Product.Name</td>
                                <td>$@item.Product.GetDiscountedPrice().ToString("F2")</td>
                                <td>@item.Quantity</td>
                                <td>$@item.TotalPrice.ToString("F2")</td>
                            </tr>
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <th colspan="4" class="text-end">Grand Total:</th>
                            <th>$@ViewBag.TotalAmount.ToString("F2")</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>