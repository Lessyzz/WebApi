@{
    ViewData["Title"] = "Login";
    Layout = null;
}

<title>KTUN Market - Admin Giri≈ü Yap</title>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - E-Commerce Admin</title>
    <link rel="shortcut icon" href="/assets/logo.webp" type="image/webp">
    <link href="/assets/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/assets/bootstrap-icons.css">
    <script  src="/assets/bootstrap.bundle.min.js" defer></script>
    <script  src="/assets/jquery.min.js" defer></script>
</head>
<body class="bg-light">
<div class="login-container">
    <div class="text-center mb-4">
        <h2>E-Commerce Admin</h2>
        <p class="text-muted">Enter your credentials to access the admin panel</p>
    </div>

    <form asp-action="Login" asp-controller="Account" method="post">
        <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />
        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Username" class="form-label">Username</label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="mb-3 form-check">
            <input asp-for="RememberMe" class="form-check-input" />
            <label asp-for="RememberMe" class="form-check-label">Remember me</label>
        </div>

        <button type="submit" class="btn btn-primary w-100">Log In</button>
    </form>
</div>

</body>

<style>
    /* Admin Panel Custom CSS */
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f8f9fa;
    }

    .sidebar {
        min-height: 100vh;
    }

    .table-responsive {
        overflow-x: auto;
    }

    /* Card hover effects */
    .card {
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }

    /* Custom styling for forms */
    .form-control:focus {
        border-color: #0d6efd;
        box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
    }

    /* Dashboard stat cards */
    .stat-card {
        border-radius: 10px;
        padding: 20px;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        margin-bottom: 20px;
    }

    .stat-card i {
        font-size: 2rem;
        margin-bottom: 15px;
    }

    .stat-card h3 {
        font-size: 1.75rem;
        font-weight: bold;
    }

    .stat-card p {
        font-size: 1rem;
        color: #6c757d;
    }

    /* Custom table styles */
    .admin-table th {
        background-color: #343a40;
        color: white;
    }

    .admin-table tbody tr:hover {
        background-color: rgba(0,0,0,0.075);
    }

    /* Action buttons */
    .btn-action {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
    }

    .login-container {
        max-width: 400px;
        margin: 100px auto;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        background-color: white;
    }

</style>

</html>