@* Basket *@

<!-- Item Template (hidden, will be cloned via JavaScript) -->
<template id="basket-item-template">
    <div class="basket-item d-flex align-items-center mb-3">
        <img src="" alt="" class="basket-item-image me-2" width="50" height="50" style="object-fit: cover;">
        <div class="flex-grow-1 me-2" style="min-width: 0">
            <div class="fw-bold basket-item-name text-truncate"></div>
            <div class="small text-muted basket-item-price"></div>
        </div>
        <div class="d-flex align-items-center quantity-controls">
            <button class="btn btn-sm btn-outline-secondary decrease-quantity">
                <i class="bi bi-dash"></i>
            </button>
            <span class="mx-2 basket-item-quantity"></span>
            <button class="btn btn-sm btn-outline-secondary increase-quantity">
                <i class="bi bi-plus"></i>
            </button>
            <button class="btn btn-sm btn-outline-danger ms-2 remove-item">
                <i class="bi bi-x"></i>
            </button>
        </div>
    </div>
</template>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        loadBasketItems();

        // Event listeners
        document.getElementById('clearBasket').addEventListener('click', function(event) {
            // Prevent the dropdown from closing
            event.stopPropagation();
            clearBasket();
        });

        // Event delegation for dynamically created elements
        document.querySelector('.basket-items-list').addEventListener('click', function(event) {
            // Prevent the dropdown from closing
            event.stopPropagation();

            const target = event.target.closest('button');
            if (!target) return;

            const basketItem = target.closest('.basket-item');
            const productId = basketItem.dataset.productId;

            if (target.classList.contains('increase-quantity')) {
                addToBasket(productId);
            } else if (target.classList.contains('decrease-quantity')) {
                decreaseQuantity(productId);
            } else if (target.classList.contains('remove-item')) {
                removeFromBasket(productId);
            }
        });
    });

    // Load basket items
    function loadBasketItems() {
        fetch(`/Product/GetBasketProducts`)
            .then(response => response.json())
            .then(data => {
                updateBasketUI(data);
            })
            .catch(error => {
                console.error('Error loading basket items:', error);
            });
    }

    // Update basket UI with items
    function updateBasketUI(items) {
        const basketItemsList = document.querySelector('.basket-items-list');
        const emptyMessage = document.querySelector('.empty-basket-message');
        const basketFooter = document.querySelector('.basket-footer');
        const basketSummary = document.querySelector('.basket-summary');
        const basketActions = document.querySelector('.basket-actions');
        const basketCount = document.querySelector('.basket-count');
        const template = document.getElementById('basket-item-template');

        // Clear current items
        basketItemsList.innerHTML = '';

        if (items.length === 0) {
            emptyMessage.classList.remove('d-none');
            basketItemsList.classList.add('d-none');
            basketFooter.classList.add('d-none');
            basketSummary.classList.add('d-none');
            basketActions.classList.add('d-none');
            basketCount.textContent = '0';
            return;
        }

        // Show items list, hide empty message
        emptyMessage.classList.add('d-none');
        basketItemsList.classList.remove('d-none');
        basketFooter.classList.remove('d-none');
        basketSummary.classList.remove('d-none');
        basketActions.classList.remove('d-none');

        // Calculate total quantity for badge
        let totalQuantity = 0;
        let totalPrice = 0;

        // Populate items
        items.forEach(item => {
            const clone = template.content.cloneNode(true);
            const basketItem = clone.querySelector('.basket-item');

            basketItem.dataset.productId = item.productId;

            // Set item details
            const image = clone.querySelector('.basket-item-image');
            image.src = item.product.images.split(',')[0] || '/assets/placeholder.jpg';
            image.alt = item.product.name;

            clone.querySelector('.basket-item-name').textContent = item.product.name;

            const discountedPrice = item.product.getDiscountedPrice
                ? item.product.getDiscountedPrice()
                : (item.product.price - (item.product.price * item.product.discount / 100));

            clone.querySelector('.basket-item-price').textContent = `${discountedPrice.toFixed(2)} ₺`;
            clone.querySelector('.basket-item-quantity').textContent = item.quantity;

            // Add to list
            basketItemsList.appendChild(clone);

            // Update totals
            totalQuantity += item.quantity;
            totalPrice += discountedPrice * item.quantity;
        });

        // Update badge count
        basketCount.textContent = totalQuantity;

        // Update total price
        document.querySelector('.basket-total').textContent = `${totalPrice.toLocaleString('tr-TR', { minimumFractionDigits: 2, maximumFractionDigits: 2 })} ₺`;
    }

    // Add to basket
    function addToBasket(productId) {
        fetch('/Product/AddProductToBasketProduct?productId=' + productId, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'Accept': 'application/json'
            },
        })
            .then(response => {
                if (!response.ok) {
                    throw new Error("Network response was not ok");
                }
                return response.json();
            })
            .then(data => {
                loadBasketItems();
                showToast('Ürün Sepete Eklendi!', true);
            })
            .catch(error => {
                console.error('Error adding product to basket:', error);
                showToast('Bir Hata Oluştu.', false);
            });
    }


    // Decrease quantity
    function decreaseQuantity(productId) {
        fetch('/Product/RemoveOneProductFromBasketProduct?productId=' + productId, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'Accept': 'application/json'
            },
        })
            .then(response => response.json())
            .then(data => {
                loadBasketItems();
            })
            .catch(error => {
                console.error('Error decreasing product quantity:', error);
            });
    }

    // Remove item from basket
    function removeFromBasket(productId) {
        fetch('/Product/RemoveProductFromBasketProduct?productId=' + productId, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'Accept': 'application/json'
            },
        })
            .then(response => response.json())
            .then(data => {
                loadBasketItems();
            })
            .catch(error => {
                console.error('Error removing product from basket:', error);
            });
    }

    // Clear entire basket
    function clearBasket() {
        fetch('/Product/RemoveAllProductsFromBasketProduct', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
                'Accept': 'application/json'
            },
        })
            .then(response => response.json())
            .then(data => {
                loadBasketItems();
            })
            .catch(error => {
                console.error('Error clearing basket:', error);
            });
    }

    function showToast(message, isSuccess = true) {
        const toastElement = document.getElementById('basketToast');
        const toastBody = document.getElementById('basketToastBody');

        // Update message and style
        toastBody.textContent = message;
        toastElement.classList.remove('bg-success', 'bg-danger');
        toastElement.classList.add(isSuccess ? 'bg-success' : 'bg-danger');

        // Show the toast
        const bsToast = new bootstrap.Toast(toastElement);
        bsToast.show();
    }
</script>
