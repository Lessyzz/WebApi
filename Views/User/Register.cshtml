<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>DİJİKON - Kayıt Ol</title>
    <link href="/assets/bootstrap.min.css" rel="stylesheet">
    <script src="/assets/bootstrap.bundle.min.js" defer></script> 
    <style>
        body {
            background-color: #f8f9fa;
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .registration-container {
            max-width: 400px;
            width: 100%;
            padding: 15px;
            background-color: white;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .input-focus:focus {
            border-color: #0d6efd;
            box-shadow: 0 0 0 0.25rem rgba(13, 110, 253, 0.25);
        }
        .btn-primary {
            width: 100%;
            padding: 10px;
        }
        .brand {
            text-align: center;
            margin-bottom: 30px;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="row justify-content-center">
        <div class="registration-container">
            <div class="brand">
                <h2>Hesap Oluştur</h2>
                <p class="text-muted">Lütfen Bilgilerinizi Girin</p>
            </div>

            <form method="post" action="">
                <div class="mb-3">
                    <label for="usernameInput" class="form-label">Kullanıcı Adı</label>
                    <input type="text" name="Username" class="form-control input-focus" id="usernameInput">
                </div>
                <div class="mb-3">
                    <label for="numberInput" class="form-label">Telefon</label>
                    <input type="text" name="Number" class="form-control input-focus" id="numberInput" >
                </div>
                <div class="mb-3">
                    <label for="emailInput" class="form-label">Email</label>
                    <input type="email" name="Email" class="form-control input-focus" id="emailInput" >
                </div>
                <div class="mb-3">
                    <label for="passwordInput" class="form-label">Şifre</label>
                    <input type="password" name="Password" class="form-control input-focus" id="passwordInput" >
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="termsCheck">
                    <label class="form-check-label" for="termsCheck">Kullanım Şartlarını Kabul Ediyorum</label>
                </div>
                <button type="submit" class="btn btn-primary">Kayıt ol</button>
            </form>

            <div class="mt-3 text-center">
                <p>Zaten hesabın var mı? <a href="/User/Login" class="text-decoration-none">Giriş Yap</a></p>
            </div>
        </div>
    </div>
</div>

<script>
    const form = document.querySelector('form');

    const usernameInput = document.getElementById('usernameInput');
    const numberInput = document.getElementById('numberInput');
    const emailInput = document.getElementById('emailInput');
    const passwordInput = document.getElementById('passwordInput');
    const termsCheck = document.getElementById('termsCheck');

    const numberRegex = /^[0-9]{10}$/;
    const emailRegex = /^[^\s@@]+@@[^\s@@]+\.[^\s@@]+$/;
    
    form.addEventListener('submit', function(event) {
        if (usernameInput.value.trim() === '' || numberInput.value.trim() === '' || emailInput.value.trim() === '' || passwordInput.value.trim() === '') {
            event.preventDefault();
            alert('Lütfen tüm alanları doldurun.');
            return;
        }

        if (!numberRegex.test(numberInput.value)) {
            event.preventDefault();
            alert('Telefon numarası geçersiz. Lütfen 10 haneli bir numara girin.');
            return;
        }
        numberInput.value = '0' + numberInput.value;

        if (!emailRegex.test(emailInput.value)) {
            event.preventDefault();
            alert('Email adresi geçersiz. Lütfen geçerli bir email adresi girin.');
            return;
        }

        if (!termsCheck.checked) {
            event.preventDefault();
            alert('Kullanım şartlarını kabul etmelisiniz.');
            return;
        }

        if (passwordInput.value.length < 8) {
            event.preventDefault();
            alert('Şifre en az 8 karakter olmalıdır.');
            return;
        }
    });

</script>

</body>
</html>